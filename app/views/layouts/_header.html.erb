<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <%= link_to "POST", root_path, class:"text-light" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li>
              <%= link_to homes_about_path do %>
              <i class="fa-solid fa-house-chimney"> Home </i>
              <% end %>
            </li>
            <li>
              <%= link_to users_mypage_path(current_user.id) do %>
              <i class="fa-regular fa-circle-user"> User </i>
              <% end %>
            </li>
            <li>
              <%= link_to posts_path(genre: "shine") do %>
              <i class="fa-solid fa-sun"> Sun </i>
              <% end %>
            </li>
            <li>
              <%= link_to posts_path(genre: "dark") do %>
              <i class="fa-regular fa-moon"> Moon </i>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa-solid fa-right-from-bracket"> Logout</i>
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to root_path do %>
              <i class="fa-solid fa-house-chimney"></i>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path do %>
              <i class="fa-solid fa-right-to-bracket"></i>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path do %>
              <i class="fa-solid fa-plus"></i>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>