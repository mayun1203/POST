<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
  <h2>Users search for "<%= @word %>"</h2>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size:"50x50" %></td>
          <td><%= user.name %><%= user.account_id %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <thead>
      <tr>
        <th></th>
        <th>投稿者</th>
        <th>投稿内容</th>

      </tr>
    <tbody>
    <h2>Posts search for "<%= @word %>"</h2>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to user_path(post.user) do %>
            <%= image_tag post.user.get_profile_image, size:"50x50" %>
          <% end %>
        </td>
        <td>
          <%= link_to user_path(post.user) do %>
            <%= post.user.name %><%= post.user.account_id %>
          <% end %>
        </td>
        <td><%= post.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>