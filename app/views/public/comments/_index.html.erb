<% post.comments.each do |comment| %>
  <%= link_to user_path(comment.user) do %>
    <%= image_tag comment.user.get_profile_image, size: "40x40" %>
    <%= comment.user.name %>
  <% end %><br>
  <%= comment.comment %>
  <% if comment.user == current_user %>
    <%= link_to "Destroy", post_comment_path(post, comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
  <% end %>
<% end %>