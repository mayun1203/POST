<% if user_signed_in? && current_user.id != user.id %>
  <% if current_user.following?(user) %>
    <%= button_to "フォロー解除", relationship_path(current_user.relationships.find_by(follower: user)), method: :delete, remote: true, class:"btn btn-outline-success" %>
  <% else %>
    <%= button_to "フォロー", relationships_path(follower: user),method: :post, remote: true, class:"btn btn-outline-success" %>
  <% end %>
<% end %>