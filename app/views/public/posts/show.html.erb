<div class='container mt-5'>
  <div class='row'>
    <div class='mx-auto'>
        <%= image_tag @post.user.get_profile_image %>
        <%= @post.user.name %><br>
        <%= @post.body %><br>
        <% if @post.image.present? %>
          <div><%= image_tag @post.post_image(300,500) %></div>
        <% end %>
        <%= link_to "Edit", edit_post_path(@post) %>
        <%= link_to "Delete", post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？" %>
    </div>
  </div>
</div>
