<div class='container mt-5'>
	<div class='row'>
  	<!--div class='mx-auto'-->
  		<h4 class="col text-center">＼＼User Information／／</h4>

  		<table class="table table-boederless text-center">
  		  <%= form_with model: @user do |f| %>
  		    <tr>
  		      <th><%= f.label :account_id, "ユーザー名" %></td>
  		      <td><%= f.text_field :account_id %></td>
  		    </tr>
  		    <tr>
  		      <th><%= f.label :email %></td>
  		      <td><%= f.text_field :email %></td>
  		    </tr>
  		    <tr>
  		      <th><%= f.label :phone_number %></td>
  		      <td><%= f.text_field :phone_nember %></td>
  		    </tr>
  		    <tr>
  		      <div class="form_group">
              <% if user_signed_in? && @user.id == current_user.id %>
              <td>
                <%= link_to "Good Bye", users_hide_user_path(current_user), method: :delete, "data-confirm" => "本当に退会しますか？？", class: "btn btn-outline-danger" %>
              </td>
            <% end %>
  		      <td><%= f.submit "Save", class: "btn btn-danger" %></td>
          </tr>
          </div>
  		  <% end %>
  		</table>
  	</div>
  </div>
</div>
