<div class="container mt-5">
  <div class="row">
    <div class="mx-auto">
      <h5 class="text-center">＜投稿履歴一覧＞</h5>
      <table>
        <thead>
          <tr>
            <th>投稿日時</th>
            <th>投稿者</th>
            <th>ユーザーID</th>
            <th>投稿数</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.created_at.strftime('%Y/%m/%d %H:%M') %></td>
              <td>
                <%= link_to admin_user_path(user) do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td><%= user.account_id %></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>