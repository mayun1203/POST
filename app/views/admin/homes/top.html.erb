<div class="container mt-5">
  <div class="row">
    <div class="mx-auto">
      <h5 class="text-center">＜投稿履歴一覧＞</h5>
      <table>
        <thead>
          <tr>
            <th>投稿日時</th>
            <th>投稿者</th>
            <th>ユーザーID</th>
            <th>投稿内容</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.created_at.strftime('%Y/%m/%d %H:%M') %></td>
              <td>
                <%= link_to admin_user_path(post.user) do %>
                  <%= post.user.name %>
                <% end %>
              </td>
              <td><%= post.user.account_id %></td>
              <td><%= link_to admin_post_path(post) do %><%= post.body %><% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>