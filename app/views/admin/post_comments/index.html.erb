<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="my-5">＜コメント一覧＞</h5>
      <table class="table">
        <thead>
          <tr>
            <th>投稿日時</th>
            <th>投稿者</th>
            <th>ユーザーID</th>
            <th>コメント内容</th>
          </tr>
        </thead>
        <tbody>
          <% @post_comments.each do |post_comment| %>
            <tr>
              <td><%= post_comment.created_at.strftime('%Y/%m/%d %H:%M') %></td>
              <td>
                <%= link_to admin_user_path(post_comment.user) do %>
                  <%= post_comment.user.name %>
                <% end %>
              </td>
              <td><%= post_comment.user.account_id %></td>
              <td><%= post_comment.comment %></td>
              <td>
              <%= link_to '削除', admin_post_comment_path(post_comment), method: :delete, data: { confirm: '本当に削除しますか?' },class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
          <%= paginate @post_comments %>
        </tbody>
      </table>
    </div>
  </div>
</div>