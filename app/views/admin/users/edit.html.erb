<div class="container text-center">
  <div class="row">
    <div class="col">
      <h4 class="my-5">＜<%= @user.name %>さんの会員情報編集＞</h4>
      <table class="table table-borderless">
        <%= form_with model: [:admin, @user] do |f| %>
        <tr>
          <td>会員ID</td>
          <td><%= @user.id %></td>
        </tr>

        <tr>
          <td>氏名</td>
          <td><%= f.text_field :name %></td>
        </tr>

        <tr>
          <td>ユーザーID</td>
          <td><%= f.text_field :account_id %></td>
        </tr>

        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :phone_number %></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
        </tr>

        <tr>
          <td>会員ステータス</td>
          <td>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "有効", { value: :true }  %>

            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "退会", { value: :false } %>
          </td>
        </tr>

        <tr>
          <td><%= link_to "Back", admin_user_path(@user), class:"btn btn-info" %></td>
          <td><%= f.submit "変更を保存", class:"btn btn-success" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>