<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">＜会員一覧＞</h4>
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>ユーザーID</th>
            <th>投稿日時</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td>
              <%= link_to admin_user_path(user) do %>
                <%= user.name %>
              <% end %>
            </td>
            <td><%= user.account_id %></td>
            <td><%= user.created_at.strftime('%Y/%m/%d %H:%M') %></td>
            <td><%= user.is_active ? "有効":"退会" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>