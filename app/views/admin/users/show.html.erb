<div class="container">
  <div class="row">
    <div class="col-6">
      <h4 class="my-5">＜<%= @user.name %>さんの会員詳細＞</h4>
      <%= link_to "編集", edit_admin_user_path(@user), class:"btn btn-success" %>
      <div class="d-flex align-items-center">
        <table class="table table-borderless">
          <tr>
            <th>会員ID</td>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>氏名</td>
            <td><%= @user.name %></td>
          </tr>

          <tr>
            <th>ユーザーID</th>
            <td><%= @user.account_id %></td>
          </tr>

          <tr>
            <th>電話番号</th>
            <td><%= @user.phone_number %></td>
          </tr>

          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>

          <tr>
            <th>会員ステータス</th>
            <th><%= @user.is_active ? "有効":"退会済み" %></th>
          </tr>
        </table>
      </div>
    </div>

    <div class='col-6'>
      <h4 class="my-5">＜投稿一覧＞</h4>
      <% @posts.each do |post| %>
        <div class="card-body text-dark" style="border: solid;">
          <%= image_tag post.user.get_profile_image, size:"50x50" %><%= post.user.name %><%= post.user.account_id %><br>
          <div class="card_text text-center">
            <%= post.body %>
            <% if post.image.present? %>
              <div><%= image_tag post.post_image(200,400) %></div>
            <% end %>
          </div>
          <%= link_to "削除", admin_post_path(@post.id), method: :delete %>

          <%= render "public/comments/counter", post: post %>
        </div>
      <% end %>
    </div>
  </div>
</div>